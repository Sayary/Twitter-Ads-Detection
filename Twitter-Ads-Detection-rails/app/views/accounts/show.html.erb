<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @account.username %>
</p>

<p>
  <strong>Keyword:</strong>
  <%= @account.keyword %>
</p>


<%= link_to 'Edit', edit_account_path(@account) %> |
<%= link_to 'Back', accounts_path %>

<p>
<table>
  <caption style="text-align:left"><b>Promotions:</b></caption>
  <tr>
    <th>Content</th>
    <th>Keyword1</th>
    <th>Relevance1</th>
    <th>Keyword2</th>
    <th>Relevance2</th>
    <th>Keyword3</th>
    <th>Relevance3</th>

  </tr>

  <tr>
    <% @promotions.each do |promotion| %>
    <td><%= promotion.content%></td>
    <td><%= promotion.keyword1 %><br/></td>
    <td><%= promotion.relevance1 %><br/></td>
    <td><%= promotion.keyword2 %><br/></td>
    <td><%= promotion.relevance2 %><br/></td>
    <td><%= promotion.keyword3 %><br/></td>
    <td><%= promotion.relevance3 %><br/></td>

  </tr>
<% end %>
</table>
</p>

<p>
<table>
  <caption style="text-align:left"><b>Tweets:</b></caption>
  <tr>
    <th>Content</th>
  </tr>

  <tr>
    <% @tweets.each do |tweet| %>
    <td><%= tweet.content%></td>

  </tr>
<% end %>
</table>
</p>
